<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Signups">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"/>

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout"

        android:layout_gravity="center"
        android:background="@color/Lavender"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="65dp"        android:fontFamily="@font/fonts"

            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/signupemail"

            android:drawableStart="@drawable/baseline_filter_vintage_24"
            android:background="@drawable/customedit"
            android:hint="Email"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/signupname"

            android:drawableStart="@drawable/baseline_book_24"
            android:background="@drawable/customedit"
            android:hint="Name"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/signupuser"

            android:drawableStart="@drawable/baseline_face_24"
            android:background="@drawable/customedit"
            android:hint="Username"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"

            android:id="@+id/signuppassword"

            android:drawableStart="@drawable/baseline_block_24"
            android:background="@drawable/customedit"
            android:hint="Password"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Up"
            android:id="@+id/signupbutton"
            android:fontFamily="@font/fonts"

            android:layout_marginTop="30dp"

            android:textSize="36sp"
            android:textColor="@color/Lavender"
            android:backgroundTint="@color/white"
            app:cornerRadius ="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginredirect"
            android:fontFamily="@font/fonts"

            android:text="Already an user? Login"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="36sp"
            />

    </LinearLayout>
</LinearLayout>